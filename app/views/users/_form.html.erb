<%= form_with model: @user do |f| %>
  <% if @user.errors.any? %>
    <div class="errors">
      <% @user.errors.each_with_index do |e, idx| %>
        <div class="error_<%= idx %>">
          <%= e.message%>
        </div>
      <% end %>
    </div>
  <% end %>
  <div class="form-gorup">
    <%= f.label :name, placeholder: "Name" %>
    <%= f.text_field :name, placeholder: "Name" %>
  </div>
  <div class="form-gorup">
    <%= f.label :username, placeholder: "Username" %>
    <%= f.text_field :username, placeholder: "Username" %>
  </div>
  <div class="form-gorup">
    <%= f.label :email, placeholder: "Email" %>
    <%= f.text_field :email, placeholder: "Email" %>
  </div>
  <div class="form-gorup">
    <%= f.label :password, placeholder: "Password" %>
    <%= f.text_field :password, placeholder: "Password" %>
  </div>
  <div class="form-gorup">
    <%= f.label :password_confirmation, placeholder: "Confirm password" %>
    <%= f.text_field :password_confirmation, placeholder: "Confirm password" %>
  </div>
  <div class="form-group">
    <%= f.submit %>
    <span>or</span>
    <%= link_to  "Login", login_path %>
  </div>
<% end %>