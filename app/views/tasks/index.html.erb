<div class="container">
  <div class="header">
    <h1>Tasks</h1>
    <div class="header-actions">
      <%= link_to "New task",
                new_task_path,
                data: { turbo_frame: dom_id(Task.new) },
                class: "btn btn--primary" %>
    </div>
  </div>

  <%= turbo_frame_tag Task.new %>

  <%= turbo_frame_tag "tasks" do %>
    <%= render @tasks %>
  <% end %>
</div>