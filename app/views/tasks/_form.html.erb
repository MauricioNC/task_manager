<%= form_with model: @task do |f| %>
  <div class="form-group">
    <%= f.label :task_name, "Task name" %>
    <%= f.text_field :task_name, placeholder: "Task name" %>
  </div>
  <div class="form-group">
    <%= f.label :description, "Task description" %>
    <%= f.text_area :description, placeholder: "Task description" %>
  </div>
  <div class="form-group">
    <%= f.select :priority_id, Priority.order(:level).map { |priority| [priority.priority, priority.id] } %>
  </div>
  <%= f.submit %>
<% end %>