<%= turbo_frame_tag task do %>
  <div class="task">
    <%= link_to task.task_name,
                task_path(task),
                data: { turbo_frame: "_top" } %>
    <div class="task_actions">
      <%= link_to "Edit",
                  edit_task_path(task) %>
      <%= button_to "Delete",
                    task_path(task),
                    method: :delete %>
    </div>
  </div>
<% end %>